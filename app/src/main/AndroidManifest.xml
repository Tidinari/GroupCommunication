<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tidinari.groupcommunication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dem_avatar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dem_avatar_round"
        android:theme="@style/Theme.GroupCommunication"
        android:name=".app.GroupCommunicationApplication">
        <activity
            android:name=".view.entrance.EntranceActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.GroupInteractionActivity"
            android:exported="false" />
    </application>

</manifest>